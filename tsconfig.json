{
  "compilerOptions": {                  
    "target": "ES2019",
    "module": "esnext",
    "outDir": "public",
    "rootDir": ".",
        
    "strict": true,
          
    "noUnusedLocals": false ,
    "noUnusedParameters": false ,
    "noImplicitReturns": true ,
    "noFallthroughCasesInSwitch": true ,
    "moduleResolution": "node",
  
    "esModuleInterop": true ,
        
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "public",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}